@model Item

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Image" alt="@Model.Name" />
    <h3>@Model.Name</h3>
    <p>@Model.ShortDescription</p>
    <p><a class="btn btn-default" href="@Url.Action("Details", "Item", new { id = Model.Id })">View details &raquo;</a></p>
</div>